<?xml version = "1.0" encoding ="UTF-8"?>
<controller name ="laundrymachine-controller">
    <command name = "start_washer">
        <sensor name = "IS_DOOR_CLOSED" value ="true"/>
        <sensor name = "IS_EMPTY" value = "false"/>
        <sensor name = "IS_CLEAN" value = "false"/>
        <sensor name = "IS_WASHER_ON" value = "false"/>
    </command>
    <command name = "stop_washer">
        <sensor name = "IS_CLEAN" value = "true"/>
        <sensor name = "IS_WASHER_ON" value = "true"/>
    </command>
</controller>
