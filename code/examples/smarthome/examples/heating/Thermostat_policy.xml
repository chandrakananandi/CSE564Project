    </command>
    <command name= "on_airconditioner">
        <sensor name = "IS_AIRCONDITIONER_ON" value = "false"/>
        <sensor name = "OWNER_DISTANCE" value = "<=500m" />
        <sensor name = "IS_DOOR_OPEN" value = "false"/>
