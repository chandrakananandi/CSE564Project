<controller name = "thermostat">
    <command name= "on_roomheater">
        <sensor name = "IS_ROOMHEATER_ON" value = "false"/>
        <sensor name = "IS_HOUSE_EMPTY" value ="false"/>
        <sensor name = "IS_DOOR_OPEN" value = "false"/>
        <sensor name = "IS_WINDOW_OPEN" value = "false"/>
        <sensor name = "IS_AIRCONDITIONER_ON" value = "false"/>
        <sensor name = "IS_TEMP_BELOW_LOWERTHRESHOLD" value ="true"/>
    </command>
    <command name= "on_roomheater">
        <sensor name = "IS_ROOMHEATER_ON" value = "false"/>
        <sensor name = "OWNER_DISTANCE" value = "<=500m"/>
        <sensor name = "IS_DOOR_OPEN" value = "false"/>
        <sensor name = "IS_WINDOW_OPEN" value = "false"/>
        <sensor name = "IS_AIRCONDITIONER_ON" value = "false"/>
