     </command>
      <command name = "off_roomheater">
        <sensor name = "IS_ROOMHEATER_ON" value = "true"/>
        <sensor name = "IS_TEMP_BELOW_LOWERTHRESHOLD" value = "true"/>
     </command>
</controller>