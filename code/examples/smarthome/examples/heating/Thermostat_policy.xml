        <sensor name = "IS_ROOMHEATER_ON" value = "false"/>
        <sensor name = "IS_TEMP_ABOVE_UPPERTHRESHOLD" value ="true"/>
     </command>
     <command name = "off_roomheater">
        <sensor name = "IS_ROOMHEATER_ON" value = "true"/>
        <sensor name = "IS_HOUSE_EMPTY" value = "true" />
     </command>
      <command name = "off_roomheater">
        <sensor name = "IS_ROOMHEATER_ON" value = "true"/>
        <sensor name = "IS_TEMP_ABOVE_UPPERTHRESHOLD" value = "true" />
     </command>
       <command name = "off_airconditioner">
        <sensor name = "IS_AIRCONDITIONER_ON" value = "true"/>
